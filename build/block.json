{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "featured-posts-block/featured-posts-block",
  "version": "0.1.0",
  "title": "Featured Posts Block",
  "category": "widgets",
  "icon": "admin-post",
  "description": "Show a set number of posts to feature",
  "example": {},
  "supports": {
    "html": false
  },
  "attributes": {
    "showFeaturedImage": {
      "type": "boolean",
      "default": false
    },
    "showCategory": {
      "type": "boolean",
      "default": false
    },
    "numberOfPosts": {
      "type": "number",
      "default": "1"
    }
  },
  "textdomain": "featured-posts-block",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php",
  "viewScript": "file:./view.js"
}